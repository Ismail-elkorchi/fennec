{
  "name": "ismail-elkorchi/fennec",
  "description": "Fennec control plane bootstrap",
  "type": "project",
  "require": {
    "php": ">=8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11"
  },
  "config": {
    "platform": {
      "php": "8.4.0"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Fennec\\": "controller/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fennec\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "php -l public/index.php",
    "test": "phpunit --colors=always",
    "stan": "phpstan analyse -c phpstan.neon"
  }
}
